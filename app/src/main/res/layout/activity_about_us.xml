<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".ui.activity.AboutUsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="40dp"
        android:background="@color/primary"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/about_us_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Us"
            android:textSize="32sp"
            style="@style/textView_style"
            android:textStyle="bold"
            android:layout_gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="32dp">

        <TextView
            android:id="@+id/about_us_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to Flux, your reliable budget tracking app. Our mission is to help you manage your finances with ease and efficiency. \nTrack your expenses, and achieve financial freedom with our intuitive tools and features. Thank you for choosing Flux!"
            style="@style/textView_style"
            android:textSize="18sp"
            android:textStyle="bold"
            android:lineSpacingExtra="8dp"
            android:paddingBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Contact Us:"
            style="@style/textView_style"
            android:textSize="18sp"
            android:textStyle="bold"
            android:lineSpacingExtra="16dp"
            android:paddingBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Phone No: +977 9865206747\n Email: dhakalabhinav4@gmail.com\n Instagram: abh1.dh"
            style="@style/textView_style"
            android:textSize="18sp"
            android:textStyle="bold"
            android:lineSpacingExtra="16dp"
            android:paddingBottom="16dp"/>

    </LinearLayout>

</LinearLayout>